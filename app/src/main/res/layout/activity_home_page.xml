<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimary">



        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl1">
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="435dp">


                <Button
                    android:id="@+id/light1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:text="Light 1"
                    android:background="@color/btn_off"/>

                <Button
                    android:id="@+id/light2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Light 2"
                    android:background="@color/btn_off"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignBaseline="@+id/light1"
                    android:layout_alignBottom="@+id/light1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:id="@+id/camera"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:text="Camera"
                    android:background="@color/btn_off"
                    android:layout_below="@+id/light2"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/sensor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="20dp"
                    android:text="Security"
                    android:background="@color/btn_off"
                    android:layout_alignBaseline="@+id/camera"
                    android:layout_alignBottom="@+id/camera"
                    android:layout_alignStart="@+id/light2" />

                <Button
                    android:id="@+id/btnLogOut"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Logout"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:onClick="logOut"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</ScrollView>